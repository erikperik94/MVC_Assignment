@model Game

<p>@ViewBag.Title</p>
<br />

<form asp-action="GuessingGame" method="post" role="form">
    <div class="form-group">
        <div>
            <label asp-for="GuessInput">Guess the number  between 1-100:</label>
            <br />
            <input asp-for="GuessInput" type="number" value="" min="1" max="100" required />
            <button class="btn btn-success" type="submit">Submit</button>
            <button class="btn btn-success" type="reset">Reset</button>
        </div>
    </div>
</form>

<br />
<p>@ViewBag.resultMessage</p>

